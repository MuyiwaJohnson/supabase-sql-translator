{
  "name": "supabase-query-translator",
  "displayName": "Supabase Query Translator",
  "description": "Translate Supabase JavaScript queries to SQL in real-time",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "supabase-query-translator.translateQuery",
        "title": "Translate Supabase Query to SQL",
        "category": "Supabase Query Translator"
      },
      {
        "command": "supabase-query-translator.translateInSplit",
        "title": "Translate Supabase Query (Split View)",
        "category": "Supabase Query Translator"
      },
      {
        "command": "supabase-query-translator.showHover",
        "title": "Show SQL Translation",
        "category": "Supabase Query Translator"
      },
      {
        "command": "supabase-query-translator.translateToHttp",
        "title": "Translate to HTTP Request",
        "category": "Supabase Query Translator"
      },
      {
        "command": "supabase-query-translator.translateToCurl",
        "title": "Translate to cURL Command",
        "category": "Supabase Query Translator"
      },
      {
        "command": "supabase-query-translator.roundTrip",
        "title": "Round-trip Translation (Supabase JS → SQL → Supabase JS)",
        "category": "Supabase Query Translator"
      },
      {
        "command": "supabase-query-translator.fullTranslation",
        "title": "Full Translation (All Formats)",
        "category": "Supabase Query Translator"
      }
    ],
    "keybindings": [
      {
        "command": "supabase-query-translator.translateQuery",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      },
      {
        "command": "supabase-query-translator.translateToHttp",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h"
      },
      {
        "command": "supabase-query-translator.translateToCurl",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      },
      {
        "command": "supabase-query-translator.roundTrip",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      },
      {
        "command": "supabase-query-translator.fullTranslation",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "supabase-query-translator.translateInSplit",
          "group": "navigation",
          "when": "editorLangId == javascript || editorLangId == typescript"
        },
        {
          "command": "supabase-query-translator.translateQuery",
          "group": "navigation",
          "when": "editorLangId == javascript || editorLangId == typescript"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "supabase-translator",
          "title": "Supabase Translator",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "supabase-translator": [
        {
          "id": "supabaseTranslator.results",
          "name": "Translation Results",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha --require ts-node/register 'src/test/unit/**/*.test.ts'",
    "test:integration": "node ./out/test/runTest.js",
    "test:all": "npm run test:unit && npm run test:integration"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.8",
    "chai": "^4.3.7",
    "eslint": "^8.0.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@supabase/sql-to-rest": "^0.1.8",
    "knex": "^3.0.0",
    "ts-morph": "^21.0.1"
  }
}
