{
  "name": "supaquery",
  "displayName": "SupaQuery",
  "description": "Translate Supabase JavaScript queries to SQL, HTTP, and cURL in real-time",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/MuyiwaJohnson/supaquery-vscode-extension.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "supaquery.translateQuery",
        "title": "Translate Supabase Query",
        "category": "SupaQuery"
      }
    ],
    "keybindings": [
      {
        "command": "supaquery.translateQuery",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "supaquery.translateQuery",
          "group": "navigation",
          "when": "editorLangId == javascript || editorLangId == typescript"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "supaquery",
          "title": "SupaQuery",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "supaquery": [
        {
          "id": "supaquery.results",
          "name": "Translation Results",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha --require ts-node/register 'src/test/unit/**/*.test.ts'",
    "test:integration": "node ./out/test/runTest.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "benchmark": "ts-node src/test/performance/benchmark.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.8",
    "chai": "^4.3.7",
    "eslint": "^8.0.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@supabase/sql-to-rest": "^0.1.8",
    "knex": "^3.0.0",
    "ts-morph": "^21.0.1"
  }
}
